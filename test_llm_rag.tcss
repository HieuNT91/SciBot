/* General screen layout */
Screen {
    layout: vertical;
    padding: 2;
    background: #1e1e2e;
    color: white;
}

/* Header and Footer */
Header {
    background: #44475a;
    color: #f8f8f2;
    text-style: bold;
}

Footer {
    background: #44475a;
    color: #f8f8f2;
    text-style: italic;
}

/* Main layout */
#main_layout {
    layout: vertical;
    padding: 2;
}

/* Welcome message styling */
#welcome {
    content-align: center middle;
    text-style: bold;
    background: #282a36;
    color: #ff79c6;
    padding: 1;
    border: round #6272a4;
}

/* Input and Button styling */
#query_input {
    border: solid #8be9fd;
    padding: 1;
    width: 100%;
}

Button {
    padding: 1 2;
    border: round #50fa7b;
}

Button:disabled {
    background: #44475a;
    color: #6272a4;
    border: none;
}

/* Section label for results */
.section-label {
    text-style: bold;
    background: #44475a;
    color: #ffb86c;
    padding: 1;
    border: round #6272a4;
}

/* RichLog styling */
.log-output {
    border: solid #bd93f9;
    padding: 1;
    background: #282a36;
    color: #f8f8f2;
    max-height: 10;
    overflow: auto;
}